{
  "manifest_version": 3,
  "name": "Lofi Pomodoro",
  "version": "1.0",
  "description": "A simple pomodoro timer synced with lo-fi music streams.",
  "permissions": [
    "storage",
    "offscreen",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  }
}